<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="供应商"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/supplier"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入供应商名称"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="货物名称"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/goodsName"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入货物名称"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="进货类型"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/goodsType"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入进货类型   "
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="进货单价"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/unitPrice"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入进货单价"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="进货数量"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/goodsNum"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入进货数量"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="总价"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/totalPrice"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入总价"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="100sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="进货时间"
                    android:textSize="14sp" />

                <DatePicker
                    android:id="@+id/rec_date"
                    android:layout_width="0sp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:gravity="center_vertical"
                    android:hint="请输入进货时间"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="采购人"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/purchasePerson"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入采购人"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="支付方式"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/payMethod"
                    android:layout_width="0sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入支付方式"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divide_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:background="@drawable/check_select"
                    android:text="保存"
                    android:textColor="#ffffff" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>